# === CORE CONFIGURATION ===
# Port for the application (set by Replit in production)
PORT=5000

# API Key for remote function calls (auto-generated if not set)
API_KEY=

# === AI/LLM PROVIDERS ===
# OpenAI API Key (required for GPT models)
OPENAI_API_KEY=

# Anthropic API Key (for Claude models)
ANTHROPIC_API_KEY=

# Google AI API Key (for Gemini models)
GOOGLE_API_KEY=

# Replicate API Token (for image generation)
REPLICATE_API_TOKEN=

# ElevenLabs API Key (for text-to-speech)
ELEVENLABS_API_KEY=

# === DATABASE ===
# PostgreSQL Database URL (auto-configured by Replit)
DATABASE_URL=
PGDATABASE=
PGHOST=
PGPASSWORD=
PGPORT=
PGUSER=

# === AUTHENTICATION ===
# Flask Secret Key (auto-generated if not set)
FLASK_SECRET_KEY=
# SESSION_SECRET is REQUIRED for production auth and session management.
# The application will fail to start if this is not set.
SESSION_SECRET=

# === PAYMENT PROCESSING (STRIPE) ===
# Stripe Secret Key (starts with sk_test_ or sk_live_)
STRIPE_SECRET_KEY=

# Stripe Webhook Secret (for webhook signature verification)
STRIPE_WEBHOOK_SECRET=

# Default Stripe Price ID for checkout
STRIPE_PRICE_ID=

# Domain URL for Stripe redirects
DOMAIN_URL=https://your-app.replit.app

# === IMAGE GENERATION / STABLE DIFFUSION ===
# Stable Diffusion Model Configuration
SD_MODEL_NAME=SG161222/Realistic_Vision_V5.1_noVAE
SD_MODEL_PATH=
DB_INSTANCE_TOKEN=<aria>
DB_CLASS_TOKEN=woman
DB_OUTPUT_DIR=outputs/dreambooth_model
PERSONA_IMAGES_DIR=training_images

# === SOCIAL MEDIA INTEGRATIONS (OPTIONAL) ===
# Instagram Graph API
IG_USER_ID=
IG_ACCESS_TOKEN=

# === VOICE CONFIGURATION (OPTIONAL) ===
# ElevenLabs Voice ID for Aria
PERSONA_VOICE_ID=

# === WEB UI CONFIGURATION ===
# Web UI Host (default: localhost)
WEB_UI_HOST=0.0.0.0

# Basic Auth for UI (optional)
BASIC_AUTH_USERNAME=
BASIC_AUTH_PASSWORD=

# === DEPLOYMENT FLAGS ===
# Set by Replit automatically in production
REPLIT_DEPLOYMENT=
REPLIT_DEPLOYMENT_ID=
REPLIT_DB_URL=

# === LOGGING ===
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# === EXPERIMENTAL FEATURES ===
# Enable experimental features
ENABLE_EXPERIMENTAL=false