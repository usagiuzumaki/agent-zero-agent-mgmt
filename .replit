modules = ["nodejs-20", "web", "bash", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["antlr", "awsebcli", "cargo", "ffmpeg-full", "freetype", "gcc-unwrapped", "gitFull", "jre", "lcms2", "libiconv", "libimagequant", "libjpeg", "libsndfile", "libtiff", "libwebp", "libxcrypt", "openjpeg", "playwright-driver", "rustc", "tcl", "tesseract", "tk", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Agent Zero Web UI"

[[workflows.workflow]]
name = "Agent Zero Web UI"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run_ui.py --host=0.0.0.0 --port=5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 38987
externalPort = 3000

[deployment]
deploymentTarget = "cloudrun"
run = ["python", "run_ui.py", "--host=0.0.0.0", "--port=5000"]
build = ["sh", "-c", "pip install -r requirements.txt"]
